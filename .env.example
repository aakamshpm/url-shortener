# Database
DATABASE_URL="postgresql://<user>:<password>@localhost:5433/url_shortener?schema=public"

# PostgreSQL credentials for docker-compose
POSTGRES_DB=url_shortener
POSTGRES_USER=<user>
POSTGRES_PASSWORD=<password>

# Redis Cache (for hot URLs)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=<redis_password>

# Redis Analytics (for click counters)
REDIS_ANALYTICS_HOST="localhost"
REDIS_ANALYTICS_PORT=6380
REDIS_ANALYTICS_PASSWORD=<analytics_redis_password>

# Application
PORT=3000
BASE_URL="http://localhost:3000"

# Counter Service
COUNTER_BATCH_SIZE=1000
